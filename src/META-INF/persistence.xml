<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="sqlServerDS">
		<jta-data-source>jdbc/sqlserver-ds</jta-data-source>

		<properties>
			<property name="disableActiveFeature" value="0" />
			<property name="eclipselink.jdbc.batch-writing" value="JDBC" />
			<property name="eclipselink.jdbc.batch-writing.size" value="1000" />
			<property name="eclipselink.jdbc.parameter-delimiter" value="?" />

			<!-- <property name="eclipselink.logging.level" value="FINE"/> <property 
				name="eclipselink.logging.level.sql" value="FINE"/> <property name="eclipselink.logging.parameters" 
				value="true"/> -->
		</properties>
	</persistence-unit>
</persistence>